{
  "name": "create-temporal-app-typescript",
  "version": "1.0.0",
  "description": "Typescript accelerator for Temporal apps",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "build:workflow": "mkdir -p build && tsx scripts/build-workflow-bundle.ts",
    "lint": "eslint .",
    "start": "node --import tsx src/domain/index.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "ts-node src/client.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "bff": "node --import tsx src/bff/index.ts",
    "pubsub": "node --import tsx src/pubsub/index.ts"
  },
  "type": "module",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.4",
    "@graphql-codegen/typed-document-node": "^5.0.6",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@temporalio/activity": "^1.9.3",
    "@temporalio/client": "^1.9.3",
    "@temporalio/worker": "^1.9.3",
    "@temporalio/workflow": "^1.9.3",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.9.0",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.1",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "graphql-sse": "^2.5.3",
    "ruru": "^2.0.0-beta.11"
  },
  "devDependencies": {
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/schema": "^10.0.3",
    "@tsconfig/node16": "^16.1.3",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2"
  }
}
